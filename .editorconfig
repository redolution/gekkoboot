root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
max_line_length = 99
trim_trailing_whitespace = true

[*.md]
max_line_length = 80

[*.nix]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = unset
trim_trailing_whitespace = true

[.git/**]
max_line_length = unset

[*.{yml,yaml,clang-format}]
indent_style = space
indent_size = 4
